<% quality_array = QualityList.all.map {|quality| [quality.quality]} %>
<% language_array = Language.all.map {|language| [language.language]} %>
<% type_link_array = TypeLink.all.map{|link| link.type_link}%>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
    <%= form_for(@link) do |f| %>
      <% if @link.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

          <ul>
          <% @link.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :url %><br>
        <%= f.text_field :url %>
      </div>
      <div class="field">
        <%= f.label :str_type %><br>
        <%= f.select :str_type, options_for_select(type_link_array) %>
      </div>
      <div class="field">
        <%= f.label :country %><br>
        <%= f.select :country, options_for_select(language_array) %>
      </div>
      <div class="field">
        <%= f.label :quality %><br>
        <%= f.select :quality, options_for_select(quality_array)%>
      </div>
      <div class="field" id="hiddenReports">
        <%= f.label :reports %><br>
        <%= f.number_field :reports, :value => '0' %>
      </div>
      <div class="actions">
        <%= f.submit %>
        <div/>
    <% end %>
